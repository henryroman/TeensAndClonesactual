---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <!-- Logo Section -->
        <a href="/" class="text-lg flex items-center">
          <img src="https://i.ibb.co/yskhSQs/calamus-logo.png" alt="Calamus Nursery Logo" class="h-12 w-auto" /> <!-- Adjust height as needed -->
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {menuitems.map((item, index) => (
            <>
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-gray-900 hover:text-gray-1100 font-semibold"
                >
                  <span>{item.title}</span>
                </a>
              </li>
            </>
          ))}
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="tel:+1-714-222-0114" block size="md">Call us</Link>
          <Link href="public/CalamusNurseryMenuTeens2024-25.pdf" download="CalamusNurseryMenuTeens2024-25.pdf" size="md" block> Menu </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div>
        <div class="hidden lg:flex items-center gap-4">
          <a href="tel:+1-714-222-0114" style="font-weight: 800;">Call us</a>

          <!-- Updated Inventory Button with Hidden Buttons using Checkbox Hack -->
          <div class="relative inline-block">
            <!-- Hidden Checkbox Input -->
            <input type="checkbox" id="toggleInventory" class="hidden peer" />
            <!-- Label Styled as Main Button -->
            <label for="toggleInventory" class="bg-black hover:bg-black text-white font-bold py-2 px-4 rounded transition duration-1000 cursor-pointer">
              Inventory
            </label>

            <!-- Hidden Buttons (Revealed when Checkbox is Checked) -->
            <div class="absolute top-full mt-2 space-x-2 hidden peer-checked:flex">
              <a href="public/CalamusNurseryMenu.pdf" download="CalamusNurseryMenu.pdf">
                <button class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-1000">
                  Clone Inventory
                </button>
              </a>
              <a href="public/CalamusNurseryMenuTeens2024-25.pdf" download="CalamusNurseryMenuTeens2024-25.pdf">
                <button class="bg-black hover:bg-black text-white font-bold py-2 px-4 rounded transition duration-1000">
                  Teen Inventory
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</Container>
